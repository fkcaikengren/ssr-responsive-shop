{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true, //Save 之后调用prettier进行格式化
  "editor.formatOnPaste": false,
  "editor.formatOnSaveMode": "modifications",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.run": "onSave", //onSave or onType (一旦enable eslint就会采用两者之一检查)
  "eslint.alwaysShowStatus": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue"
  ],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss"
  ]

}